<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CardviewExplanation">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="CardviewList">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="Play_Buttons">
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Artist_List">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Title_List">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Edit_Text_Search">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/cardview_light_background</item>
    </style>

    <style name="text_explanation">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">16dp</item>
    </style>



</resources>
